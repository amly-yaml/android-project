<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="com.example.nangshwekyi.cp3406assignment2app.MainActivity">

    <ImageView
        android:layout_width="270dp"
        android:layout_height="260dp"
        android:id="@+id/image_chemistry"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center"
        android:src="@drawable/first_image"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@color/DarkGreenBlue"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="@string/game_play"
        android:textSize="25sp"
        android:layout_marginTop="19.30dp"
        android:textStyle="italic"
        android:textColor="@color/colorPrimary"
        android:onClick="buttonPress"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/button_instruction"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@color/DarkGreenBlue"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="19.30dp"
        android:text="@string/instruction"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="italic"
        android:onClick="buttonGo"
        tools:ignore="OnClick" />


    <Button
        android:id="@+id/buttonResult"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="19.30dp"
        android:background="@color/DarkGreenBlue"
        android:onClick="buttonHandler"
        android:text="@string/best_score"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:textStyle="italic"
        tools:ignore="OnClick" />



</LinearLayout>
