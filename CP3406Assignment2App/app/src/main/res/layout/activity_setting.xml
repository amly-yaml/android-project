<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="140dp"
    tools:context="com.example.nangshwekyi.cp3406assignment2app.SettingActivity">

    <Switch
        android:id="@+id/simpleSwitch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:checked="false"
        android:text="@string/music_turn_on"
        android:textOff="@string/off"
        android:textOn="@string/on"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"/>

    <Switch
        android:id="@+id/simpleSwitch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:checked="true"
        android:text="@string/music_turn_off"
        android:textOff="@string/off1"
        android:textOn="@string/on1"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@color/DarkGreenBlue"
        android:padding="10dp"
        android:text="@string/sumit"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="100dp"
        android:textStyle="italic"
        android:textSize="25sp"/>

</LinearLayout>
